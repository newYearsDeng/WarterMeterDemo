            <TextView
                android:id="@+id/tv_task_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:scrollbars="vertical"
                android:text="任务详情"
                android:textColor="#848484"
                android:textSize="20dp"
                />
        </ScrollView>

    </LinearLayout>

    <LinearLayout
