<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ReadMeterActivity">

    <include layout="@layout/title_bar" />

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_below="@+id/rl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginTop="24px"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:gravity="center"
                android:text="用户信息"
                android:textSize="44px"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C9C9CA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:layout_marginLeft="40px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90px"
                    android:layout_height="30px"
                    android:layout_gravity="center_vertical"
                    android:text="用户号"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/tv_userNum_readMeter"
                    android:layout_width="wrap_content"
                    android:layout_height="30px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="60px"
                    android:text="212"
                    android:textSize="30px" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C9C9CA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:layout_marginLeft="40px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90px"
                    android:layout_height="30px"
                    android:layout_gravity="center_vertical"
                    android:text="水表号"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/tv_meterNum_readMeter"
                    android:layout_width="wrap_content"
                    android:layout_height="30px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="60px"
                    android:text="212"
                    android:textSize="30px" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C9C9CA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:layout_marginLeft="40px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90px"
                    android:layout_height="30px"
                    android:layout_gravity="center_vertical"
                    android:text="用户名"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/tv_userName_ReadMeter"
                    android:layout_width="wrap_content"
                    android:layout_height="30px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="60px"
                    android:text="212"
                    android:textSize="30px" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C9C9CA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:layout_marginLeft="40px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90px"
                    android:layout_height="30px"
                    android:layout_gravity="center_vertical"
                    android:text="表   册"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/tv_forms_readMeter"
                    android:layout_width="wrap_content"
                    android:layout_height="30px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="60px"
                    android:text="212"
                    android:textSize="30px" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C9C9CA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:layout_marginLeft="40px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90px"
                    android:layout_height="30px"
                    android:layout_gravity="center_vertical"
                    android:text="区   域"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/tv_area_readMeter"
                    android:layout_width="wrap_content"
                    android:layout_height="30px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="60px"
                    android:text="212"
                    android:textSize="30px" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
<RelativeLayout
    android:layout_below="@+id/card1"
    android:id="@+id/relative_takePhoto_readMeter"
    android:layout_width="150px"
    android:layout_height="120px"
    android:layout_marginLeft="24px"
    android:layout_marginTop="100px"
    android:background="@drawable/camera_bg">
    <ImageButton
        android:id="@+id/iv_takePhoto_readMeter"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/seletor_task_photo" />
</RelativeLayout>
    <ImageView
        android:layout_below="@+id/card1"
        android:id="@+id/iv_show_readMeter"
        android:layout_marginTop="20px"
        android:layout_width="300px"
        android:layout_height="400px"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:visibility="gone"
        />
    <com.northmeter.wartermeterdemo.view.CircularProgressButton
        style="@style/setting_text_style"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32px"
        android:id="@+id/btn_handInput_readMeter"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:background="#E2635B"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="40px"
        app:cpb_cornerRadius="40dp"
        app:cpb_selectorComplete="@drawable/idle_state_selector"
        app:cpb_selectorIdle="@drawable/error_state_selector"
        app:cpb_textComplete="图片上传操作"
        app:cpb_textIdle="手动输入" />
</RelativeLayout>
