<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <!--手机号-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginLeft="26px"
        android:paddingTop="35px"
        android:text="用户信息"
        android:textColor="#77000000"
        android:textSize="28px"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:background="@drawable/shape_task_edit_text_bg">

        <TextView
            android:id="@+id/tv_forget_pwd_phone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:text="手机号"
            android:textColor="#000"
            android:textSize="30px"/>

        <EditText
            android:id="@+id/et_forget_pwd_phone_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24px"
            android:layout_toRightOf="@+id/tv_forget_pwd_phone_title"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="#000"
            android:textSize="30px"
            />

        <Button
            android:id="@+id/btn_forget_pwd_phone_verify"
            android:layout_width="132px"
            android:layout_height="59px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24px"
            android:background="@drawable/seletor_builduser_button_change"
            android:text="验  证"
            android:textColor="@drawable/seletor_title_bar_back_text"
            android:textSize="30px"
            />
    </RelativeLayout>

    <!--密保问题-->
    <include layout="@layout/layout_forget_pwd_problem"/>

</LinearLayout>