<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/take_photo_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:showIn="@layout/activity_take_phote">

    <com.northmeter.wartermeterdemo.view.CameraPreview
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_photo_controller" />

    <com.northmeter.wartermeterdemo.view.FocusView
        android:id="@+id/view_focus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true" />
    <!--网格参考线矩形框和圆圈-->
    <com.northmeter.wartermeterdemo.view.ReferenceLine
        android:id="@+id/referenceLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_photo_controller"
        android:layout_centerInParent="true"
        android:text="请将水表读数区域放\n  置在绿色矩形框内"
        android:textColor="#00ff15"
        android:textSize="20dp" />

    <RelativeLayout
        android:id="@+id/rl_photo_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_alignParentBottom="true"
        android:padding="24px">

        <ImageButton
            android:id="@+id/ib_close"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentLeft="true"
            android:padding="10px"
            android:background="@drawable/ic_close_selector" />

        <ImageButton
            android:id="@+id/ib_photo"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_centerInParent="true"
            android:padding="10px"
            android:background="@drawable/ic_takephoto_selector" />
        <ImageButton
            android:visibility="gone"
            android:id="@+id/ib_xiangce"
            android:layout_toRightOf="@+id/ib_photo"
            android:layout_width="60px"
            android:layout_marginLeft="80px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:onClick="xiangceChoose"/>

        <ImageButton
            android:id="@+id/ib_light"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:background="@drawable/light_off" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_estimate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预估"
        android:textColor="#fff"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        />
</RelativeLayout>