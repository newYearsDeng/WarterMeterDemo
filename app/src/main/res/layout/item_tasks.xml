<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:padding="10px">

    <CheckBox
        android:id="@+id/cb_item_tasks_choose_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10px"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_tasks_name"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cb_item_tasks_choose_delete"
        android:background="@drawable/icon_tasks"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginRight="14px"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_tasks_name"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_tasks_address_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="30px"/>

        <TextView
            android:id="@+id/tv_item_tasks_specific"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_tasks_address_id"
            android:layout_marginTop="10px"
            android:textColor="#77000000"
            android:textSize="24px"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_item_task_already_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10px"
                android:layout_marginRight="20px"
                android:textColor="#99000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginTop="10px"
            >
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->

            <ImageView
                android:id="@+id/iv_item_tasks_isfinish_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/tv_item_tasks_isfinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10px"
                android:layout_marginRight="20px"
                android:textColor="#99000000"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
