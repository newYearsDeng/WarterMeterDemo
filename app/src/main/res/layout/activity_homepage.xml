            <ImageButton
                android:id="@+id/ibtn_homepage_task"
                android:layout_width="93px"
                android:layout_height="151px"
                android:layout_centerInParent="true"
                android:background="@drawable/seletor_homepage_task"
                android:text="任务"
                />
            <TextView
                android:id="@+id/tv_homepage_unread_message"
                android:layout_width="37px"
                android:layout_height="37px"
                android:layout_marginLeft="170px"
                android:layout_marginTop="20px"
                android:background="@drawable/homepage_unread_message_icon"
                android:gravity="center"
                android:textSize="16px"
                android:visibility="gone"
                android:textColor="#fff"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_homepage_right_top"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_toRightOf="@id/rl_homepage_left_top"
            >

            <ImageButton
                android:id="@+id/ibtn_homepage_search"
                android:layout_width="93px"
                android:layout_height="151px"
                android:layout_centerInParent="true"
                android:background="@drawable/seletor_homepage_search"
                android:text="查询"
                />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_homepage_left_bottom"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_below="@+id/rl_homepage_left_top"
            >

            <ImageButton
                android:id="@+id/ibtn_homepage_pay"
                android:layout_width="93px"
                android:layout_height="151px"
                android:layout_centerInParent="true"
                android:background="@drawable/seletor_homepage_pay"
                android:text="缴费"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_homepage_right_bottom"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_below="@id/rl_homepage_right_top"
            android:layout_toRightOf="@id/rl_homepage_left_bottom"
            >

            <ImageButton
                android:id="@+id/ibtn_homepage_setting"
                android:layout_width="93px"
                android:layout_height="151px"
                android:layout_centerInParent="true"
                android:layout_marginBottom="30px"
                android:background="@drawable/seletor_homepage_setting"
                android:text="设置"
                />
