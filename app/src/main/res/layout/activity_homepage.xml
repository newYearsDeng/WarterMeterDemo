    <!--上传下载-->
    <FrameLayout
        android:layout_width="484px"
        android:layout_height="484px"
        android:layout_gravity="center"
        android:layout_marginTop="80px"
        android:background="@drawable/homepage_up_down_circle"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="400px"
            android:layout_height="400px"
            android:layout_gravity="center"
            android:background="@drawable/homepage_up_down_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ibtn_homepage_upload"
                android:layout_width="162px"
                android:layout_height="162px"
                android:layout_marginBottom="20px"
                android:background="@drawable/seletor_homepage_upload"
                />

            <ImageButton
                android:id="@+id/ibtn_homepage_download"
                android:layout_width="162px"
                android:layout_height="162px"
                android:layout_marginTop="20px"

                android:background="@drawable/seletor_homepage_download"
                />
        </LinearLayout>
    </FrameLayout>

    <!--具体功能-->
    <RelativeLayout
        android:layout_width="583px"
        android:layout_height="419px"
        android:layout_gravity="center"
        android:layout_marginTop="90px"
        android:background="@drawable/homepage_split"
