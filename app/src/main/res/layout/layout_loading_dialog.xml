<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mytoast_bg"
    android:gravity="center_vertical|center" >
    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="@dimen/dp_size_45"
        android:layout_height="@dimen/dp_size_45"
        android:indeterminateDrawable="@drawable/dialog_anima" />
    <TextView
        android:id="@+id/tv_loading_dialog"
        android:layout_marginTop="@dimen/dp_size_15"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_size_30"
        android:gravity="center"
        android:textSize="@dimen/font_size_16"
        android:textStyle="bold"
        android:textColor="#fff"
       android:lines="1"
        android:text="正在登录..."/>

</LinearLayout>